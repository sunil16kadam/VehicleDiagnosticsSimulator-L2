/////////////////////////////////////////////////////////////////////
// c_cpp_properties.json
//  Configure for compiler to look for header files in the Headers folder:
//  Command Palette (Ctrl+Shift+P) > Select C/C++: Edit Configurations (UI)
//  Imp: Add the Headers folder to the includePath:
/////////////////////////////////////////////////////////////////////

{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${default}",
                //  Imp: Add the Headers folder to the includePath:
                "${workspaceFolder}/Headers",
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "macos-clang-arm64"
        }
    ],
    "version": 4
}
